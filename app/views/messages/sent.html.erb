<%= render "shared/messages_menu" %>
<% if @sent_messages.blank? %>
 <label>Sent Items is empty</label>
<% else %>
 <table class="table table-hover table-bordered">
  <thead>
   <th>To</th>
   <th>Subject</th>
   <th>Content</th>
   <th>Sent at</th>
  </thead>
  <tbody>
   <% @sent_messages.each do |message| %>
    <tr>
     <td>
        <%=h message.recepient_id %>
     </td>
     <td>
        <%=h message.subject %>
     </td>
     <td>
        <%= link_to("Show", show_messages_path(:id=>message)) %>
     </td>
     <td>
        <%=h message.updated_at %>
     </td>
    </tr>
   <% end %>
  </tbody>
 </table>
<% end %>

