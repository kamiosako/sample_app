<%= render "shared/messages_menu" %>
<% if @sent_messages.blank? %>
 <label>Sent Items is empty</label>
<% else %>
 <table class="table table-hover table-bordered">
  <thead>
   <th>To</th>
   <th>Subject</th>
   <th>Content</th>
   <th>Sent at</th>
  </thead>
  <tbody>
   <% @sent_messages.each do |message| %>
    <tr>
     <td>
        <%=h message.recepient.name %>
     </td>
     <td>
        <%=h message.subject %>
     </td>
     <td>
        <%=h truncate(message.body, length:20) %>
        <%= link_to("More", more_messages_path(:id=>message))if message.body.size > 20 %>
     </td>
     <td>
        <%=h message.updated_at.to_s(:db) %>
     </td>
    </tr>
   <% end %>
  </tbody>
 </table>
<% end %>

